<html>
<head>
	<title>board</title>
	<link rel="stylesheet" type="text/css" href="../css/board.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<script>
	  var gid = <%- gameid %>;	
	  var port = <%-port%>;
	  var socket = io.connect('http://boardable.azurewebsites.net:' + port);
	  // var socket = io.connect('http://localhost:' + port);
	  socket.on('welcome', function (data) {
	    socket.emit('table', { gameid: gid });
	  });
	  socket.on('take', function(data){
	  	$('#take').append('took one ');
	  });
	</script>
	<script type="text/javascript">
		$(document).ready(function(){
			$('#give').click(function(){
				socket.emit('give', { userid:0, to:5, gameid:gid});
			});
		});
	</script>
</head>
<body>
	<div class="opening"></div>
	<%=gameid%>
	and port- 
	<%=port%>
	<button id = "give">give card</button>
	<div id = "take"></div>
</body>
</html>