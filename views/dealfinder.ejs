	<script type="text/javascript">
		$(document).ready(function(){

			function gomobile(){
				$('.container').height('100%');
				$('.container').width('100%');
				$('.container').css('margin-top', '0');
			}

			if(/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) || $(window).height() > $(window).width() ) {
				gomobile();
			}
			$('img').click(function(){
				if($(this).css('border')[0] == '0'){
					$(this).css('border','2px solid midnightblue');	
					$(this).height('60');	
					$(this).width('60');
				}else{
					$(this).css('border','0px solid');		
					$(this).height('64');	
					$(this).width('64');
				}
			});
		})
	</script>
