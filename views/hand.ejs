<html>
<head>
	<title>hand</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<script>
	  var uid = <%- userid %>;	
	  var gid = <%- gameid %>;	
	  var socket = io.connect('http://localhost');
	  socket.on('welcome', function (data) {
	    socket.emit('hand', { userid: uid, gameid:gid });
	  });
	  socket.on('take', function(data){
	  	$('#take').append('took one ');
	  });
	</script>
	<script type="text/javascript">
		$(document).ready(function(){
			$('#give').click(function(){
				socket.emit('give', {userid:uid,to:0, gameid:gid})
			});
		});
	</script>
</head>
<body>
	user - 
	<%=userid%>
	and game - 
	<%=gameid%>
	<button id = "give">give card</button>
	<div id = "take"></div>
</body>
</html>